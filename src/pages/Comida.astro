	<main>
		<Header src="https://www.pinterest.com/cfdb4970-0af4-4af6-b0e8-3ce98a33d075https://i.pinimg.com/736x/89/4d/7a/894d7ac5d08437d82418118bf0d4697e.jpg"/>
		
		<nav class="card-grid">
			<Card
			title='Taquito'
			body='$300'
			href='/'
			foto='/public/header_foto.jpg'
			/>
			<Card
			title='Taquito'
			body='300'
			href='/'
			foto='/public/header_foto.jpg'
			/>
			<Card
			title='Taquito'
			body='300'
