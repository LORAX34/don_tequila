<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.card-grid{
		display: grid;
		grid-template-columns: repeat(auto-fit,minmax(24ch,1fr));
		gap: 2rem;
		padding: 2;
	}
	
</style>
